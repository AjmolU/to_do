<%= form_for @task do |f| %>
  <%= f.label "Title:" %> <br>
  <%= f.text_field :title %> <br>

  <%= f.label "Details:" %> <br>
  <%= f.text_area :details %> <br>

  <%= f.label 'Completed?' %>
  <%= f.check_box :completed %><br><br>
  <%= f.submit %>
<% end %><br>
<%= link_to 'Back To Do', tasks_path %>